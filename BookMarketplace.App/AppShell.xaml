<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookMarketplace.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:BookMarketplace.App.View"
    Title="BookMarketplace.App"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:LoginView}"
        Route="MainPage" />

    <TabBar Title="Dashboard" Route="Dashboard">

        <ShellContent Title="Dashboard" ContentTemplate="{DataTemplate view:DashboardView}" />
    </TabBar>

</Shell>
